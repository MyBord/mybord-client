{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "header/*": ["src/app/header/*"],
      "navigation/*": ["src/app/navigation/*"],
      "pages/*": ["src/app/pages/*"],
      "shared/*": ["src/app/shared/*"],
      "static/*": ["src/static/*"],
      "storybook/*": ["src/thirdParty/storybook/*"],
      "styles/*": ["src/styles/*"]
    }
  }
}
